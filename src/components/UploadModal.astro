---
const { open = false, onClose, onUpload } = Astro.props;
---

{
  open && (
    <div class="fixed inset-0 z-50 flex items-center justify-center">
      <div class="absolute inset-0 bg-black bg-opacity-40" onclick={onClose} />
      <div class="relative bg-white rounded-lg shadow-lg p-8 w-full max-w-md z-10">
        <button
          class="absolute top-2 right-2 text-gray-400 hover:text-gray-600 text-2xl"
          type="button"
          aria-label="Close"
          onclick={onClose}>
          &times;
        </button>
        <h2 class="text-xl font-semibold mb-4">Upload a File</h2>
        <form
          action="/api/upload"
          method="post"
          enctype="multipart/form-data"
          onsubmit={onUpload}
          class="flex flex-col gap-4">
          <label for="file" class="font-medium text-gray-700">
            Select file:
          </label>
          <input
            type="file"
            id="file"
            name="file"
            required
            class="file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
          />
          <button
            type="submit"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition">
            Upload
          </button>
        </form>
      </div>
    </div>
  )
}
